# Google AI API Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Google Cloud Storage Configuration
GCS_BUCKET_NAME=artisan-marketplace-media
GCS_CREDENTIALS_PATH=path/to/your/service-account-key.json

# Google AI Model Configuration (using latest models)
GEMINI_MODEL=gemini-2.5-flash
GEMINI_VISION_MODEL=gemini-2.5-flash
IMAGEN_MODEL=imagen-3.0-generate-001
VEO_MODEL=veo-3.0-generate-001

# Image Generation Settings
IMAGE_COUNT_DEFAULT=2
IMAGE_COUNT_MAX=3
IMAGE_QUALITY=high
IMAGE_FORMAT=PNG
IMAGEN_ASPECT_RATIO=1:1
IMAGEN_SAFETY_LEVEL=BLOCK_ONLY_HIGH

# Video Generation Settings
VIDEO_DURATION=15
VIDEO_FPS=30
VIDEO_RESOLUTION_WIDTH=1920
VIDEO_RESOLUTION_HEIGHT=1080
VIDEO_FORMAT=mp4
VEO_ASPECT_RATIO=16:9
VEO_MOTION_AMOUNT=MEDIUM
VEO_MAX_REFERENCE_IMAGES=3

# Agent System Configuration
AGENT_TIMEOUT=300
MAX_RETRIES=3
MAX_CONCURRENT_WORKFLOWS=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/agent_system.log

# Optional: API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Optional: Development Settings
DEVELOPMENT_MODE=false
DEBUG_AGENTS=false
SAVE_INTERMEDIATE_RESULTS=true
